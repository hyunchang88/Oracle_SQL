-- 중복된 데이터와 null 값을 허용하지 않는 것이 기본키

-- CLOUMN LEVEL의 제약조건
CREATE TABLE TEST_MEMBER(
		ID				VARCHAR2(50) PRIMARY KEY ,
		PWD			VARCHAR2(50) ,
		NAME			VARCHAR2(50) ,
		AGE			NUMBER ,
		MARRIAGE	CHAR(1) ,
		REGDATE	DATE
);

-- TABLE LEVEL의 제약조건
CREATE TABLE TEST_MEMBER(
		ID				VARCHAR2(50) ,
		PWD			VARCHAR2(50) ,
		NAME			VARCHAR2(50) ,
		AGE			NUMBER ,
		MARRIAGE	CHAR(1) ,
		REGDATE	DATE ,
		PRIMARY KEY (ID)
);

DROP TABLE TEST_MEMBER;

-- DEFAULT 명시해주면 누군가 데이터를 넣어주지 않으면 그곳에는 NULL 이 들어가
CREATE TABLE TEST_MEMBER(
		ID				VARCHAR2(50) PRIMARY KEY ,
		PWD			VARCHAR2(50) ,
		NAME			VARCHAR2(50) ,
		AGE			NUMBER ,
		MARRIAGE	CHAR(1) ,
		REGDATE	DATE DEFAULT SYSDATE
);

INSERT INTO TEST_MEMBER VALUES('acorn', 'acorn', '에이콘', 5, 'y', sysdate);
INSERT INTO TEST_MEMBER VALUES('acorn1', 'acorn1', '에이콘', 5, 'y'); -- 오류(컬럼의 갯수와 데이터의 갯수의 차이가 있어) 

INSERT INTO TEST_MEMBER  (ID, PWD, NAME, AGE, MARRIAGE)  -- 갯수를 맞춰줘
VALUES('acorn1', 'acorn1', '에이콘', 5, 'y');

INSERT INTO TEST_MEMBER  (ID, PWD)  -- 갯수를 맞춰줘
VALUES('acorn2', 'acorn2');

SELECT	*
FROM	TEST_MEMBER ;



CREATE TABLE TEST_BOARD(
		SEQ			NUMBER PRIMARY KEY ,
		WRITER		VARCHAR2(50) NOT NULL REFERENCES TEST_MEMBER(ID),
		TITLE			VARCHAR2(50) ,
		CONTENT	VARCHAR2(2000) ,
		REGDATE	DATE ,
		CNT			NUMBER 	
);

DROP TABLE TEST_BOARD;

-- SEQUENCE (
-- NEXTVAL - 값을 얻어올때,
-- CURRVAL - 현재 시퀀스의 값을 확인 할때 )
CREATE SEQUENCE BOARDSEQ;

CREATE TABLE TEST_BOARD(
		SEQ			NUMBER PRIMARY KEY ,
		WRITER		VARCHAR2(50) NOT NULL REFERENCES TEST_MEMBER(ID),
		TITLE			VARCHAR2(50) ,
		CONTENT	VARCHAR2(2000) ,
		REGDATE	DATE ,
		CNT			NUMBER 	
);

INSERT INTO TEST_BOARD
VALUES(BOARDSEQ.NEXTVAL, 'JSLIM', '공지', '뻥', SYSDATE,0); -- 이거 무결성 오류나

INSERT INTO TEST_BOARD
VALUES(BOARDSEQ.NEXTVAL, NULL, '공지', '뻥', SYSDATE,0); -- NOT NULL을 잡아놔서 NULL 삽입불가 오류

INSERT INTO TEST_BOARD
VALUES(BOARDSEQ.NEXTVAL, 'ACORN', '공지', '뻥', SYSDATE,0); -- 데이터는 대소문자 구별함

INSERT INTO TEST_BOARD
VALUES(BOARDSEQ.NEXTVAL, 'acorn', '공지', '뻥', SYSDATE,0);

SELECT	*
FROM	TEST_BOARD ;

-- SEQUENCE는 ROLLBACK 이 안되서 4가 들어간것
-- WRITER 는 외래키 이기에 부모의 기본키값만 가능

DROP TABLE TEST_MEMBER; 
-- TEST_BOARD가 외래키로 관계를 가지고 있고 참조하는 데이터가 들어있어서 부모 테이블은 삭제가 되지않아
-- TABLE을 DROP 하고 싶으면 자식부터 DROP 시키고 올라가는 것임

-- 뒤에 옵션으로 CASCADE CONSTRAINT 주면 제약조건은 SKIP 하고 삭제 가능
DROP TABLE TEST_MEMBER CASCADE CONSTRAINT; 

CREATE TABLE TEST_MEMBER(
		ID				VARCHAR2(50) PRIMARY KEY ,
		PWD			VARCHAR2(50) ,
		NAME			VARCHAR2(50) ,
		AGE			NUMBER ,
		MARRIAGE	CHAR(1) ,
		REGDATE	DATE DEFAULT SYSDATE
);

-- 기본키를 하나만 해줘야해
CREATE TABLE TEST_PK(
	ORDERNUM		NUMBER PRIMARY KEY ,
	ITEMNUM		NUMBER	PRIMARY KEY ,
	QTY				NUMBER	CHECK(QTY > 0) ,
	DESCRIBE		VARCHAR2(2000)
);

-- 복합 기본키
CREATE TABLE TEST_PK(
	ORDERNUM			NUMBER ,
	ITEMNUM			NUMBER ,
	QTY					NUMBER	CHECK(QTY > 0) ,
	DESCRIBE			VARCHAR2(2000) ,
	PRIMARY KEY	(ORDERNUM,ITEMNUM)
);
-- CHECK 제약 조건에 위배
INSERT INTO TEST_PK
VALUES(1,1,0,'테스트');

INSERT INTO TEST_PK
VALUES(1,1,10,'테스트');

INSERT INTO TEST_PK
VALUES(1,2,10,'테스트');

SELECT * FROM TEST_PK;

-- 두개를 외래키로 잡고 싶은데 레퍼런시스 때문에 테이블레벨의 제약조건으로 가져가야해
-- 테이블 레벨의 제약조건으로 가져가려면 문법이 달라져(외래키만) 
CREATE TABLE TEST_REF(
		NUM					NUMBER PRIMARY KEY,
		ORDERNUM			NUMBER ,
		ITEMNUM			NUMBER ,
		FOREIGN KEY ( ORDERNUM, ITEMNUM ) REFERENCES TEST_PK ( ORDERNUM, ITEMNUM)
);
-- 이렇게 하면 NULL 이 들어갈수 있어
-- 외래키에는 NULL 값이 들어갈수 없게 만들어 주는것이 정책이야 (뭔 이유때문에)

INSERT INTO TEST_REF
VALUES(1,NULL,NULL);

SELECT * FROM TEST_REF;

INSERT INTO TEST_REF
VALUES(1,1,2); -- 무결성 제약조건에 위배

INSERT INTO TEST_REF
VALUES(2,1,2);

SELECT * FROM TEST_REF;


-- 뷰

CREATE OR REPLACE VIEW V_EMP
AS 	SELECT 	EMP_NAME, DEPT_ID
		FROM	EMPLOYEE
		WHERE	DEPT_ID = '90';
		
SELECT * FROM V_EMP;

CREATE OR REPLACE VIEW V_EMP_DEPT_JOB
AS		 SELECT	 EMP_NAME,
					DEPT_NAME,
					JOB_TITLE
		FROM	EMPLOYEE
		LEFT JOIN DEPARTMENT USING (DEPT_ID)
		LEFT JOIN	JOB USING (JOB_ID)
		WHERE		JOB_TITLE = '사원';
		
SELECT * FROM	V_EMP_DEPT_JOB;


INSERT INTO TEST_BOARD
VALUES(BOARDSEQ.NEXTVAL, 'acorn', '공지', '뻥', SYSDATE, 0);

SELECT * FROM TEST_BOARD;

--UPDATE
/*
UPDATE 테이블명 SET COLUMN = VALUE, [COLUMN = VALUE]
WHERE 	COLUMN = VALUE;
 */

-- 특정 레코드의 값을 변경해 주는 것이기에 WHERE 조건절에 특정 레코드 지정, SET을 통해 변경가능

UPDATE		TEST_BOARD
SET 			TITLE = '배고프당', CONTENT = '밥 묵자'
WHERE		SEQ=4;

SELECT * FROM TEST_BOARD;


-- DELETE
/*
DELETE FROM 테이블명
WHERE COLUMN = VALUE;
 */

DELETE FROM TEST_BOARD
WHERE	SEQ = 4;

SELECT * FROM TEST_BOARD;


-- ALTER TABLE
-- 테이블 이름 변경
ALTER TABLE TEST_BOARD RENAME TO EXAMPLE_BOARD;

SELECT * FROM EXAMPLE_BOARD;

-- 컬럼 이름 변경
ALTER TABLE EXAMPLE_BOARD RENAME COLUMN CNT TO VIEWCNT;

SELECT * FROM EXAMPLE_BOARD;


-- 컬럼 추가
ALTER TABLE DEPARTMENT
ADD ( MGR_ID CHAR(3) );

SELECT * FROM DEPARTMENT;

ALTER TABLE DEPARTMENT
ADD ( MGR_PWD CHAR(3) DEFAULT '101');


-- MODIFY 이용한 DEFAULT 값 수정

CREATE TABLE EMP5
(EMP_ID		CHAR(3),
EMP_NAME	VARCHAR2(20),
ADDR1		VARCHAR2(20) DEFAULT '서울',
ADDR2		VARCHAR2(100));

INSERT INTO EMP5
VALUES('A10', '임태희', DEFAULT, '청담동');

INSERT INTO EMP5
VALUES('A10', '이병언', DEFAULT, '분당 정자동');

